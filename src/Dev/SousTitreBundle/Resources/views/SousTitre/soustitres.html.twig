{% extends "DevSousTitreBundle::Layout/layout2.html.twig" %}


{% block title %}{{ parent() }} - SousTitre{% endblock %}


{% block body %}
	<h1>Sous-titres</h1>

<div class="row">
    <div class="col-md-8 col-md-offset-2">
    	
	</div>
</div>


	<table  class="tableStyle table-striped table-hover" >
		<thead>
			<tr>
				<th>{{ knp_pagination_sortable(pagination, 'Id', 's.id') }}</th>
				<th>value</th>
				<th>{{ knp_pagination_sortable(pagination, 'Titre', 's.intitule') }}</th>
				<th>Categorie</th>
				<th>{{ knp_pagination_sortable(pagination, 'Langue', 's.langue') }}</th>
				<th>{{ knp_pagination_sortable(pagination, 'Auteur', 's.addBy') }}</th>
				<th>{{ knp_pagination_sortable(pagination, 'Date', 's.date') }}</th>
			</tr>
		</thead>
		{% for sousTitre in pagination %}
			<tr>
			<td>{{ sousTitre.id }}</td>
			<td><textarea>{{ sousTitre.value }}</textarea></td>
			<td>{{ sousTitre.intitule }}</td>
			<td>{{ sousTitre.categorie.value }}</td>
			<td>{{ sousTitre.langue }}</td>
			<td>{{ sousTitre.addBy }}</td>
			<td>{{ sousTitre.date.date }}</td>
			</tr>
		{% endfor %}
			
	</table>
{# display navigation #}
<div class="navigation">
    {{ knp_pagination_render(pagination) }}
</div>






<br /><br /><br />


<hr>




<hr />
